  import java.util.ArrayList;
import java.util.Scanner;

class Pessoa {
    String nome;
    int idade;
    String endereco;

    Pessoa(String nome, int idade, String endereco) {
        this.nome = nome;
        this.idade = idade;
        this.endereco = endereco;
    }

    public String toString() {
        return nome + " - " + idade + " anos - " + endereco;
    }
}

public class trabalho09 {
    public static void main(String[] args) {
        ArrayList<Pessoa> clientes = new ArrayList<>();
        Scanner sc = new Scanner(System.in);

        System.out.print("Quantos clientes deseja cadastrar? ");
        int qtd = sc.nextInt();
        sc.nextLine();

        for (int i = 0; i < qtd; i++) {
            System.out.print("Nome: ");
            String nome = sc.nextLine();
            System.out.print("Idade: ");
            int idade = sc.nextInt();
            sc.nextLine();
            System.out.print("EndereÃ§o: ");
            String endereco = sc.nextLine();
            clientes.add(new Pessoa(nome, idade, endereco));
        }

        System.out.println("\nClientes cadastrados:");
        for (Pessoa p : clientes) {
            System.out.println(p);
        }
        sc.close();
    }
}
